<% content_for :title, "Posts" %>

<div class="container">
  <div class="d-flex justify-content-end mb-3">
    <%= link_to "PT", url_for(locale: 'pt'), class: "btn btn-secondary me-2" %>
    <%= link_to "EN", url_for(locale: 'en'), class: "btn btn-secondary" %>
  </div>
  <div class="row mb-3">
    <%= paginate @posts, window: 1 %>
    <%= link_to new_post_path, class: "text-decoration-none" do %>
      <div class="btn btn-primary rounded d-flex align-items-center justify-content-center" style="width: 8rem; height: 2.2rem;">
        <%= t('pages.posts.index.new_post') %>
        <i class="bi bi-file-earmark-plus fs-5 ms-2"></i>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-lg-8 w-100" id="posts">
      <% @posts.each do |post| %>
        <%= render post, usage: :index %>
      <% end %>
      <%= paginate @posts, window: 1 %>
    </div>
  </div>
</div>
